<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/home_title_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingTop="@dimen/bar_padding"
    >


        <TextView
            android:id="@+id/home_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/nav_title"
            android:textSize="@dimen/splash_title_size"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/home_nav_bottom_bar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/home_notification_area"
        />

        <View
            android:id="@+id/home_title_bottom_bar"
            android:layout_width="@dimen/nav_height"
            android:layout_height="@dimen/nav_title_bottom_bar_height"
            app:layout_constraintTop_toBottomOf="@id/home_title"
            app:layout_constraintRight_toRightOf="@id/home_title"
            app:layout_constraintLeft_toLeftOf="@id/home_title"
            style="@style/BottomBar"
        />

        <androidx.cardview.widget.CardView
            android:id="@+id/home_notification_area"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="@id/home_title"
            app:layout_constraintBottom_toBottomOf="@id/home_title"
            app:layout_constraintLeft_toRightOf="@id/home_title"
            app:layout_constraintRight_toRightOf="parent"
            app:cardBackgroundColor="@color/primary_2"
            app:cardCornerRadius="@dimen/home_notification_area_radius"
            app:contentPaddingLeft="@dimen/home_notification_content_padding_horizontal"
            app:contentPaddingRight="@dimen/home_notification_content_padding_horizontal"
            app:contentPaddingTop="@dimen/home_notification_content_padding_vertical"
            app:contentPaddingBottom="@dimen/home_notification_content_padding_vertical"
        >
        <ImageView
            android:id="@+id/home_notifications"
            android:layout_width="@dimen/bell_width"
            android:layout_height="@dimen/bell_height"
            android:background="@drawable/bell"
            android:backgroundTint="@color/notification"
            android:layout_gravity="center"
        />

        </androidx.cardview.widget.CardView>



        <View
            android:id="@+id/home_nav_bottom_bar"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/bar_height"
            android:layout_marginTop="@dimen/bar_padding"
            app:layout_constraintTop_toBottomOf="@id/home_title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            style="@style/BottomBar"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.appcompat.widget.SearchView
        android:id="@+id/home_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/home_title_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
    />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/slider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/slider_height"
        android:maxHeight="@dimen/slider_height"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
    />



</androidx.constraintlayout.widget.ConstraintLayout>