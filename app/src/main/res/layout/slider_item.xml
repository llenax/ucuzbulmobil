<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/slider_content_img"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/slider_content_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_max="100dp"
        app:layout_constraintHeight_max="100dp"
        android:contentDescription="resim" />

    <TextView
        android:id="@+id/slider_content_text"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        app:layout_constraintLeft_toRightOf="@id/slider_content_img"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_max="150dp"
    />


</androidx.constraintlayout.widget.ConstraintLayout>